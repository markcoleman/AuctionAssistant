# Server Configuration
PORT=3000
NODE_ENV=development

# Cloud Storage Configuration
# Supported providers: 'local', 'aws', 'azure'
STORAGE_PROVIDER=local

# AWS S3 Configuration (used when STORAGE_PROVIDER=aws)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_bucket_name

# Azure Blob Storage Configuration (used when STORAGE_PROVIDER=azure)
# AZURE_STORAGE_ACCOUNT_NAME=your_account_name
# AZURE_STORAGE_ACCOUNT_KEY=your_account_key
# AZURE_STORAGE_CONTAINER_NAME=your_container_name

# Image Optimization Settings
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_QUALITY=85
# Enable image optimization (set to 'true' to enable in development, enabled by default in production)
# ENABLE_IMAGE_OPTIMIZATION=true

# Secure URL Expiration (in seconds)
SECURE_URL_EXPIRATION=3600

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/auctionassistant

# API Keys (for future use)
# OPENAI_API_KEY=your_openai_api_key
# EBAY_API_KEY=your_ebay_api_key
